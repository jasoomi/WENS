{
  "id": "com.wens.app",
  "name": "WENS (West, East, North, South)",
  "short_name": "WENS",
  "description": "A learning platform with resources, tools, and lessons.",
  "start_url": "/index.html",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#C0C0C0",
  "theme_color": "#C0C0C0",
  "orientation": "portrait",
  "dir": "ltr",
  "lang": "en",
  "categories": ["education", "learning", "tools"],

  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "launch_handler": { "client_mode": "navigate-existing" },

  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Open the dashboard",
      "url": "/dashboard",
      "icons": [{ "src": "icons/dashboard.png", "sizes": "96x96" }]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "Open your profile",
      "url": "/profile",
      "icons": [{ "src": "icons/profile.png", "sizes": "96x96" }]
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+wens",
      "url": "/?q=%s"
    }
  ],

  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.wens.app",
      "id": "com.wens.app"
    }
  ],

  "handle_links": "preferred",

  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/plain": [".txt"]
      }
    }
  ],

  "edge_side_panel": { "preferred_width": 380 },

  "screenshots": [
    {
      "src": "screenshots/screen1.png",
      "sizes": "540x960",
      "type": "image/png"
    },
    {
      "src": "screenshots/screen2.png",
      "sizes": "540x960",
      "type": "image/png"
    }
  ]
}